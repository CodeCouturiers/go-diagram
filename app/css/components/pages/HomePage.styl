// Цветовая гамма для 2K монитора
colorCurrentDirectoryBackground = #2C2C2E // Темный серо-зеленый фон
colorHomeBackground = #1C1C1E // Темно-серый фон главной страницы

.HomePage
  width 100%
  height 100%
  background-color colorHomeBackground
  .current-directory
    position absolute
    left 0
    top 0
    margin homeComponentMargin
    .input
      background-color rgba(colorCurrentDirectoryBackground, 0.5) // Darker current directory input background
  .UMLDiagram
    width 100%
    height 100%
  .search
    position absolute
    top 0
    right 0
    margin homeComponentMargin
    width 200px
  .bottom-right
    position absolute
    bottom homeComponentMargin
    right homeComponentMargin