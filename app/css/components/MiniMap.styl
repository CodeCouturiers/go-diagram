// Цветовая гамма для 2K монитора
colorMiniMap = #3A3A3C // Темный серо-зеленый фон
colorMiniMapBorder = #4C4C4E // Более светлая граница
colorMiniMapBoxShadow = rgba(0, 0, 0, 0.5) // Темная тень

// Размеры
miniMapSize = 240px

.MiniMap
  .map
    width miniMapSize
    height miniMapSize
    border 1px solid colorMiniMapBorder
    background-color rgba(colorMiniMap, 0.4)
    box-shadow 0px 0px 12px colorMiniMapBoxShadow
    border-radius 6px
    overflow hidden
    position relative
    &:before
      content ""
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-image linear-gradient(45deg, rgba(255, 255, 255, 0.05) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.05) 50%, rgba(255, 255, 255, 0.05) 75%, transparent 75%, transparent) // Added a subtle diagonal gradient pattern
      background-size 20px 20px
      opacity 0.2 // Reduced the opacity of the gradient pattern
    .content
      position absolute
      top 0
      left 0
      width 100%
      height 100%
